<p id="notice"><%= notice %></p>

<h1 style="text-align:center; color: #95b33b; margin: 20px 0px 20px 0px">Teachers</h1>

<div class="container">
    <table id="data-table" class="table table-striped table-bordered dataTables_wrapper order-column form-inline dt-bootstrap nowrap" width="100%" cellspacing="0" >
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Username</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= link_to teacher.username, teacher %></td>
        <td><%= teacher.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
