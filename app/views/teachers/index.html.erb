<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table class="table table-striped">
  <thead>
    <tr style="background-color: black; color: white;">
      <th>First name</th>
      <th>Last name</th>
      <th>Username</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.username %></td>
        <td><%= teacher.email %></td>
        <td><%= link_to 'Show', teacher, :class=>"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher), :class=>"btn btn-default" %></td>
        <td><%= link_to 'Destroy', teacher, :class=>" btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

