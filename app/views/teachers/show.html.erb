<p id="notice"><%= notice %></p>

<%= stylesheet_link_tag 'css/profile' %>
<div class="container">

  <div class="col-md-4 col-md-offset-4">
    <div class="profile-sidebar">
      <div class="profile-userpic">
        <%= image_tag(@teacher.image_url.to_s,:class=>"img-circle img-responsive") %>
        <!--img src="https://pbs.twimg.com/profile_images/828436452748951554/0Zi7F0Kc.jpg" class="img-responsive" alt=""-->
      </div>
      <div class="profile-usertitle">
        <div class="profile-usertitle-name">
          <p> <%= @teacher.first_name %> <%= @teacher.last_name %> </p>
        </div>
        <div class="profile-usertitle-job">
          <p>TEACHER</p>
        </div>
        <div class="profile-usertitle-job">
          <strong style="color: black;">Username:</strong>
          <%= @teacher.username %>
        </div>
        <div class="profile-usertitle-job">
          <strong style="color: black;">Email:</strong>
          <%= @teacher.email %>
        </div>
        <div class="profile-usertitle-job">
          <strong style="color: black;">Investigation groups:</strong>
          <%@teacher.investigation_groups.each do |groupe|%>
          <%= link_to groupe.name, :controller => "investigation_groups", :action => "show", :id => groupe.id%>
          <%  if groupe != @teacher.investigation_groups.last %>,
          <%end
        end %>
      </div>
      <strong style="color: black;">Contributions:</strong>
      <div class="profile-usertitle-job">
        <%@teacher.contributions.each do |contribution|%>
        <%= link_to contribution.name, :controller => "contributions", :action => "show", :id => contribution.id%>
        <%  if contribution != @teacher.contributions.last %>,
        <%end
      end %>

    </div>

    <div class="profile-userbuttons">
      <% if teacher_signed_in? %>
      <% if current_teacher.id == @teacher.id %>
      <%= link_to 'Edit', edit_teacher_path(@teacher), :class=>"btn btn1" %>
      <% end %>
      <% end %>
      <%= link_to 'Back', teachers_path, :class=>"btn btn1" %>
      <% if teacher_signed_in? %>
      <% if current_teacher.id == @teacher.id %>
      <%= link_to('Log out', destroy_teacher_session_path, :method => :delete, :class=>"btn btn1") %>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>

</div>
